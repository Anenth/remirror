{
  "private": true,
  "name": "RemirrorExamples",
  "version": "0.0.1",
  "scripts": {
    "android": "react-native run-android",
    "android:log": "react-native log-android",
    "assets:link": "react-native-asset",
    "detox": "detox test",
    "detox:android": "detox test -c android.emu.debug",
    "detox:build:android": "detox build -c android.emu.debug",
    "detox:build:ios": "detox build -c ios.sim.debug",
    "detox:ios": "detox test -c ios.sim.debug",
    "postinstall": "patch-package",
    "ios": "react-native run-ios",
    "ios:log": "xcrun simctl spawn booted log stream --predicate 'processImagePath ENDSWITH \"RemirrorApp\" AND senderImagePath ENDSWITH \"RemirrorApp\"' --color always",
    "lint": "tslint --project tsconfig.lint.json --config ../../tslint.json",
    "pod:init": "cd ios && bundle exec pod init",
    "pod:install": "cd ios && bundle exec \"pod install --repo-update\"",
    "pod:update": "cd ios && bundle exec pod update",
    "start": "react-native start",
    "test": "jest",
    "typecheck": "tsc -p ./tsconfig.json --noEmit"
  },
  "dependencies": {
    "@types/react-navigation": "3.0.7",
    "detox": "13.0.3",
    "react": "16.8.6",
    "react-native": "0.60.0",
    "react-native-gesture-handler": "1.3.0",
    "react-native-log-ios": "1.0.1",
    "react-native-webview": "6.3.0",
    "react-navigation": "3.11.0"
  },
  "devDependencies": {
    "@babel/runtime": "7.5.2",
    "@react-native-community/eslint-config": "0.0.5",
    "@types/detox": "12.8.2",
    "@types/jasmine": "2.8.16",
    "@types/react-native": "0.60.0",
    "@types/react-test-renderer": "16.8.2",
    "metro-react-native-babel-preset": "0.55.0",
    "patch-package": "6.1.2",
    "postinstall-postinstall": "2.0.0",
    "react-native-asset": "1.1.4",
    "react-native-debugger-open": "0.3.19",
    "react-test-renderer": "16.8.6"
  },
  "detox": {
    "test-runner": "jest",
    "runner-config": "e2e/config.json",
    "configurations": {
      "ios.sim.debug": {
        "binaryPath": "ios/build/RemirrorExamples/Build/Products/Debug-iphonesimulator/RemirrorExamples.app",
        "build": "yarn ios",
        "type": "ios.simulator",
        "name": "iPhone X"
      },
      "android.emu.debug": {
        "binaryPath": "android/app/build/outputs/apk/debug/app-debug.apk",
        "build": "cd android && ./gradlew assembleDebug assembleAndroidTest -DtestBuildType=debug && cd ..",
        "type": "android.emulator",
        "name": "Nexus_5X_API_24"
      },
      "android.emu.release": {
        "binaryPath": "android/app/build/outputs/apk/release/app-release.apk",
        "build": "cd android && ./gradlew assembleRelease assembleAndroidTest -DtestBuildType=release && cd ..",
        "type": "android.emulator",
        "name": "Nexus_5X_API_26"
      }
    }
  }
}
