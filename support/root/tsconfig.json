{
  "extends": "./support/tsconfig.base.json",
  "compilerOptions": {
    "types": [
      "node",
      "jest",
      "jest-extended",
      "jest-axe",
      "@testing-library/jest-dom",
      "@types/requestidlecallback",
      "snapshot-diff"
    ],
    "skipLibCheck": true,
    "noEmit": true,
    "importsNotUsedAsValues": "remove",
    "plugins": [
      { "name": "typescript-snapshots-plugin" },
      { "name": "typescript-plugin-css-modules" }
    ]
  },
  "include": [
    "packages/*/src",
    "packages/@remirror/*/src",
    "global.d.ts",
    "packages/@remirror/react-components/__tests__"
  ],
  "exclude": ["packages/@remirror/svelte", "**/node_modules/**", "node_modules"]
}
