{
  "private": true,
  "name": "@remirror/native-bridge",
  "description": "MultiCursor extension for the remirror wysiwyg editor",
  "license": "MIT",
  "author": "Ifiok Jr. <ifiokotung@gmail.com>",
  "homepage": "https://github.com/ifiokjr/remirror/tree/master/@remirror/native-bridge",
  "repository": {
    "type": "git",
    "url": "https://github.com/ifiokjr/remirror.git",
    "directory": "@remirror/native-bridge"
  },
  "version": "0.3.0",
  "main": "lib/index.js",
  "module": "lib/dist/native-bridge.esm.js",
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "build": "run-p build:*",
    "build:babel": "babel src --out-dir lib --root-mode=upward --extensions \".ts,.tsx\" -s",
    "build:declaration": "tsc -p ./tsconfig.prod.json --emitDeclarationOnly --declarationMap",
    "dev": "run-p dev:*",
    "dev:babel": "babel src --out-dir lib --root-mode=upward --extensions \".ts,.tsx\" -s --watch",
    "dev:declaration": "tsc -p ./tsconfig.prod.json --emitDeclarationOnly --declarationMap --watch",
    "lint": "tslint --project tsconfig.json --config ../../tslint.json",
    "typecheck": "tsc -p ./tsconfig.json --noEmit"
  },
  "types": "lib/index.d.ts",
  "dependencies": {
    "@babel/runtime": "^7.5.2",
    "@remirror/core": "0.3.0",
    "@types/prosemirror-state": "^1.2.3",
    "@types/prosemirror-view": "^1.3.2",
    "emotion": "^10.0.14",
    "prosemirror-state": "^1.2.3",
    "prosemirror-view": "^1.9.11"
  },
  "publishConfig": {
    "access": "public"
  },
  "cjs": "lib/dist/native-bridge.cjs.js"
}
