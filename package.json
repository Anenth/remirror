    "dts-jest": "^23.0.0",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-formatter-friendly": "^7.0.0",
    "eslint-formatter-github": "^0.4.2",
    "eslint-plugin-eslint-comments": "^3.1.2",
    "eslint-plugin-graphql": "^3.1.1",
    "eslint-plugin-import": "^2.18.2",
